<Window x:Class="Beauty.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:Beauty.Properties"
        Title="登录" Height="600" Width="900" WindowState="Normal"   WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"  Icon="/Beauty;component/Image/1.png" ResizeMode="CanMinimize">
    <Canvas Height="600" Width="900" >
        <Canvas.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Image/loginbackgroud.jpg"></ImageBrush>
        </Canvas.Background>
        <TextBlock Canvas.Left="343" Canvas.Top="224" Height="23" Name="textBlock1" Text="{x:Static res:Resources.UserName}" />
        <TextBox Canvas.Left="400" Canvas.Top="224" Height="23" Name="UserName" Width="120" Text="superuser" />
        <TextBlock Canvas.Left="343" Canvas.Top="253" Height="23" Name="textBlock2" Text="{x:Static res:Resources.PassWord}" />
        <PasswordBox Canvas.Left="400" Canvas.Top="253" Height="23" Name="PassWord" Width="120" Password="" PasswordChar="*" />
        <Button Canvas.Left="400" Canvas.Top="304" Content="{x:Static res:Resources.Login}" Height="23" Name="btnLogin" Width="76" />
    </Canvas>
</Window>
